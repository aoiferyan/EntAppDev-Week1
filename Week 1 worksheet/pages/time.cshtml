@page
@model Week_1_worksheet.pages.timeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>time</title>
</head>
<body>
    <form method="post">
        <fieldset>
            <legend>Pick a day</legend>
            @for (int i = 0; i < @Model.Days.Length; i++)
            {
                <input asp-for=IsChecked[i]>
                <label asp-for=IsChecked[i]>@Model.Days[i]</label>
            }
        </fieldset>

        <select asp-for="MonthsChosen" asp-items="Model.MonthList"></select>
        <button type="submit">Submit here</button>
    </form>

    <ul>
        @for (int i = 0; i < @Model.Days.Length; i++)
        {
            if (Model.IsChecked[i])
            {
                <li>@Model.Days[i]</li>
            }
        }
    </ul>

    <ol>
        @for (int i = 0; i < @Model.MonthsChosen.Length; i++)
        {
           
                <li>@Model.MonthsChosen[i]</li>
           
        }
    </ol>
</body>
</html>
